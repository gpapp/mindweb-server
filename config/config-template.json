// This is the configuration template, before starting the server you must
// copy it to config.json, add your own IDs and keys and remove all comments
{
  "db": {
    "host": "${DB_HOST}",
    "port": "9042"
  },
  "kafka": {
    "connection": "${KAFKA_HOST}:2181/"
  },
  "auth": {
    "google": {
      "clientID": "YOURID",
      "clientSecret": "YOURKEY"
    },
    "facebook": {
      "clientID": "YOURID",
      "clientSecret": "YOURKEY"
    },
    "twitter": {
      "consumerKey": "YOURID",
      "consumerSecret": "YOURKEY"
    },
    "linkedin": {
      "consumerKey": "YOURID",
      "consumerSecret": "YOURKEY"
    }
  },
  "cookie_secret": "YOUR_RANDOM_COOKIE_SECRET",
  // This is where the API-s are exposed on, used for redirecting to the site after login
  "url": "http://localhost:3000"
}